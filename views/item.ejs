<%- include('partials/header') -%>
<div>
    <a href="/">Back to main page</a>
    <div class="card flex-column align-items-center" style="width: 30rem;">
        <img class="cardImage text-center" src=<%= item.image %> class="card-img-top" alt=<%= item.description %>>
        <div class="card-body">
          <h5 class="card-title text-center"><%= item.description %></h5>
          <p class="card-text text-center">Item# <%= item.itemNum %></p>
          <h6 class="text-center">$<%= item.price.toFixed(2) %></h6>
          <form action ="/cart/<%=item._id%>" method="GET" class="cartItem">
          <select name="qty" id="qty-select" onchange=<%= item.quantity %>>
            <% [...Array(item.quantity).keys()].forEach((x) => { %>
              <option value="<%= x + 1 %>" <% if (item.qty === (x + 1)) { %>selected<% } %>>
                <%= x + 1 %>
              </option>
            <% }) %>
          </select>
          <% if (item.quantity > 0){ %>
             <button class="btn btn-primary" id="cartButton" type="button">Add To Cart</button>
            <% } else { %>
          <button class="btn btn-primary" disabled>Out Of Stock</button>
          <% } %>
          </form>
        </div>
      </div>
</div>






























<%- include('partials/footer') -%>